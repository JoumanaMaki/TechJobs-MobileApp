<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#D4EAF4">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".JobUserDetail">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleJobuser"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="#440C7474"

                />


        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/ImageJobuser"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#440C7474"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Details"
            android:layout_marginTop="20dp"

            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/JobDetailuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#440C7474"
            android:textSize="20dp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/Jobcategoryuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#440C7474"
        android:textSize="20dp"
        android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#440C7474"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Requirements"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobRequirementsuser"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#440C7474"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#440C7474"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Objectives"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobObjectivesuser"
            android:textSize="20dp"
            android:textStyle="bold"

            android:background="#440C7474"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#440C7474"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Contact Company"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CompanyDetailsuser"
            android:textSize="20dp"
            android:textStyle="bold"

            android:background="#440C7474"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">
    <ImageButton
        android:id="@+id/btnwts"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:backgroundTint="#440C7474"
        android:src="@drawable/wts"

        />

    <ImageButton
        android:id="@+id/btnemail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#440C7474"
        android:scaleType="centerCrop"
        android:src="@drawable/email2" />

    <ImageButton
        android:id="@+id/btnapplyonapp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#440C7474"
        android:scaleType="centerCrop"
        android:src="@drawable/jobs" />
</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="BACK"
        android:layout_marginTop="20dp"
        android:onClick="Jobuserback"/>

    </LinearLayout>
</ScrollView>