<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#D4EAF4">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JobDetail">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/titleJob"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="#440C7474"

            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="62dp"

            android:layout_marginTop="10dp"
            android:id="@+id/ispublishjob"/>

    </LinearLayout>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/ImageJob"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#440C7474"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Details"
        android:layout_marginTop="20dp"

        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/JobDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#440C7474"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/Jobcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#440C7474"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#440C7474"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Requirements"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/JobRequirements"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#440C7474"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#440C7474"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Objectives"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/JobObjectives"
        android:textSize="20dp"
        android:textStyle="bold"

        android:background="#440C7474"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#440C7474"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Contact Company"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CompanyDetails"
        android:textSize="20dp"
        android:textStyle="bold"

        android:background="#440C7474"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="30dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Update"
            android:onClick="UpdateJob"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="DELETE"
            android:onClick="deletetJob"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="View Applicants"
            android:onClick="ViewApplicants"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
android:layout_marginBottom="20dp"
        android:text="BACK"
        android:layout_marginTop="20dp"
        android:onClick="Jobback"/>

</LinearLayout>

</ScrollView>