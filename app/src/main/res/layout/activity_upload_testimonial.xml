<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#D4EAF4">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadTestimonial"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mesgtestimonial"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#0C7474"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Add Testimonial"
        android:textColor="#0C7474"
        android:textSize="50dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="The aim of this from is to add testimonials to the application."
        android:textColor="#0C7474"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:fontFamily="cursive"
        android:layout_gravity="center"
        android:hint="  Name"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:drawableLeft="@drawable/ic_baseline_title_24"
        android:background="#440C7474"
        android:padding="15dp"
        android:textStyle="bold"
        android:id="@+id/etnametestimonial"
        android:inputType="text"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:fontFamily="cursive"
        android:layout_gravity="center"
        android:hint="  Feedback"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:drawableLeft="@drawable/ic_baseline_feedback_24"
        android:background="#440C7474"
        android:padding="15dp"
        android:textStyle="bold"
        android:id="@+id/ettexttestimonial"
        android:inputType="text"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Browse"
            android:id="@+id/buttonChooseTestimonial"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/imageViewTestimonial"
            android:background="#0C7474"/>
    </LinearLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="UPLAOD"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonUploadTestimonial" />


</LinearLayout>
</ScrollView>