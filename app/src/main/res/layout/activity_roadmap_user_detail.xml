<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#D4EAF4">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".RoadmapUserDetail">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleRoadmapuser"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="#440C7474"

        />


    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/ImageRoadmapuser"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/Youtubeuser"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="#440C7474"
        android:clickable="true"
        android:onClick="youtubelink"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Stepsuser"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:background="#440C7474"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Back"
        android:layout_marginTop="30dp"
        android:onClick="roaduserdetail"/>
</LinearLayout>
</ScrollView>